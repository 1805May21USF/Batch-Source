CREATE OR REPLACE FUNCTION addten(total IN NUMBER)
    RETURN NUMBER
    IS
    BEGIN
        RETURN total+10;
    END addten;
    /

SELECT INVOICEID, addten(TOTAL) FROM INVOICE WHERE TOTAL BETWEEN 1 AND 10 ORDER BY INVOICEID ASC;

CREATE OR REPLACE FUNCTION addx(x IN NUMBER, total IN NUMBER)
    RETURN NUMBER
    IS
    BEGIN
        RETURN total+x;
    END addx;
    /
    
SELECT INVOICEID, addx(200,TOTAL) FROM INVOICE WHERE TOTAL BETWEEN 1 AND 10 ORDER BY INVOICEID ASC;
